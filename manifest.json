{
    "name": "Cybozu Chrome Desktop",
    "version" : "1.0",
    "manifest_version" : 2,
    "description" : "Cybozu Desktop" ,
    "browser_action" : {
        "default_title" : "Cybozu Desktop~~",
        "default_icon" :{
            "16" : "images/icon16.png",
            "24" : "images/icon24.png",
            "32" : "images/icon32.png"
        }
    }, 
    "permissions": [
        "https://*.cybozu.com/*",
        "notifications",
        "cookies"
    ],
    "background" : {
        "scripts" : [
            "js/lib/jquery-3.4.1.min.js",
            "js/lib/vue.min.js",
            
            "js/api/CybozuAPI.js",
            
            "js/Constants.js",
            "js/CybozuTimer.js",
            "js/CybozuNotifier.js",
            "js/main.js"
        ]
    }
}