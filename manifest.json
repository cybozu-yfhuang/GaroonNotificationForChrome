{
    "name": "Cybozu Chrome Desktop",
    "version" : "1.0",
    "manifest_version" : 2,
    "description" : "Cybozu Desktop" ,
    "browser_action" : {
        "default_title" : "Cybozu Desktop~~",
        "default_icon" :{
            "16" : "images/pkq.png",
            "24" : "images/pkq.png",
            "32" : "images/pkq.png"
        }
    },
    "icons": {
        "16": "images/pkq.png",
        "48": "images/pkq.png",
        "128": "images/pkq.png"
    },

    "permissions": [
        "https://*.cybozu.com/*",
        "https://*.cybozu.cn/*",
        "https://*.cybozu-dev.com/*",
        "https://*.kintone.com/*",
        "notifications",
        "storage",
        "cookies"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "background" : {
        "scripts" : [
            "js/lib/debugout.js",
            "js/lib/jquery-3.4.1.min.js",
            "js/lib/vue.min.js",
            
            "js/Constants.js",    

            "js/api/APIClient.js",
            "js/api/CybozuAPI.js",
            
            "js/CybozuTimer.js",
            "js/CybozuNotifier.js",
            "js/CybozuStorage.js",
            "js/Function.js",
            "js/main.js"
        ]
    },
    "options_page": "/html/options.html"
}